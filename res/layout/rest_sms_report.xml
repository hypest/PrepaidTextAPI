<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/single_rest_sms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toRightOf="@+id/indicator"
        android:shadowColor="#000"
        android:shadowRadius="4"
        android:text="@string/placeholder_rest_sms"
        android:textColor="#eeeeee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/single_rest_sms_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_rest_sms"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toRightOf="@+id/indicator"
        android:paddingBottom="5dp"
        android:text="@string/placeholder_rest_sms_info"
        android:textColor="@color/sms_timestamp" />

    <View
        android:id="@+id/indicator"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/single_rest_sms_info"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:background="@color/sms_unviewed" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>